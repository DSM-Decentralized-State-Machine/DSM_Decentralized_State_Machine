# DSM Project Configuration Template
# Rename this file to .env and adjust values as needed

# Environment (development, staging, production)
DSM_ENVIRONMENT=development

# Logging
DSM_LOG_LEVEL=info

# Security
GRAFANA_ADMIN_PASSWORD=admin_password_change_me  # Change for production use!

# Network
DSM_API_PORT=7545
DSM_P2P_PORT=8765
DSM_STORAGE_PORT=8766
DSM_BRIDGE_PORT=8768
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Ethereum Bridge Configuration
ETHEREUM_RPC_URL=https://network.example.com/v2/YOUR_API_KEY  # Replace with your RPC URL
ETHEREUM_CHAIN_ID=11155111  # Sepolia testnet
ETHEREUM_CONFIRMATION_BLOCKS=6

# Storage Configuration
DSM_STORAGE_PATH=/var/lib/dsm/data
DSM_STORAGE_REPLICATION_FACTOR=2

# Feature Flags
ENABLE_QUANTUM_RESISTANT=true
ENABLE_BLUETOOTH=false
ENABLE_METRICS=true

# Development Settings
RUST_BACKTRACE=1
